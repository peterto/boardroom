<%= simple_form_for([@service, @event], :html => { :class => "form-horizontal" }) do |f| %>
<%= render 'shared/error_msg', model: @event %>
<%= f.input :message, :input_html => {:class => "span4"} %>
<%= f.association :status, :include_blank => false %>
<%= f.input :service_id, :as => :hidden, :input_html => { :value => @service.id } %>
<%= f.button :submit, :class => "btn" %>
<% end %>