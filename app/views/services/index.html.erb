<section id="admin_header">
  <ul class="nav nav-pills">
    <%= nav_link 'Services', services_path %>
    <%= nav_link 'Statuses', statuses_path %>
  </ul>
</section>

<section id="content">
  <h2>Services</h2>
  <ul class="services">
    <% @services.each do |service| %>
    <li class="clearfix">
      <%= link_to service.name, service_events_path(service), {:class => 'name'} %>
      <%= link_to 'Delete', service_path(service),
                  :confirm => 'Are you sure?', :method => :delete, :class => 'btn' %>
      <%= link_to 'Edit', edit_service_path(service), :class => 'btn' %>
    </li>
    <% end %>
  </ul>
</section>