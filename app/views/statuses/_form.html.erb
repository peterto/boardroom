<%= simple_form_for(@status, :html => { :class => "form-horizontal" }) do |f| %>
  <%= render 'shared/error_msg', model: @status %>
    <%= f.input :name, :input_html => { :class => "span4" } %>
    <%= f.input :description, :as => 'text', :input_html => { :class => "span4", :rows => 5 } %>
  <section>
    <label>* Image</label>
    <% @statuses.each do |status| %>
      <%= f.radio_button :image, status.image, :class => 'radio' %>
      <%= image_tag status.image %>
    <% end %>
  </section>
  <%= f.button :submit, :class => "btn" %>
<% end %>
